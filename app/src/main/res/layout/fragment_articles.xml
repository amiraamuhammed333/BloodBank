<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <EditText
        android:id="@+id/articles_fragment_et"
        android:layout_width="@dimen/dim_250dp"
        android:layout_height="@dimen/dim_30dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginTop="@dimen/dim_4dp"
        android:layout_marginBottom="@dimen/dim_1dp"
        android:background="@drawable/rectangle2"
        android:gravity="center"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />

    <Spinner
        android:id="@+id/articles_fragment_spinner"
        android:layout_width="@dimen/dim_250dp"
        android:layout_height="@dimen/dim_30dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/articles_fragment_et"
        app:layout_constraintStart_toStartOf="@id/articles_fragment_et"
        app:layout_constraintTop_toTopOf="@id/articles_fragment_et"


        />

    <ImageButton
        android:layout_marginTop="@dimen/dim_8dp"
        android:layout_width="@dimen/dim_30dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_search"
        android:background="@drawable/oval"
        android:layout_marginBottom="@dimen/dim_4dp"
        app:layout_constraintEnd_toStartOf="@id/articles_fragment_spinner"
        app:layout_constraintBottom_toTopOf="@id/articles_fragment_recycler_view"
        android:layout_marginStart="@dimen/dim_8dp"
        android:id="@+id/donation_fragment_ib_filter"



        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/articles_fragment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dim_4dp"
        android:layout_marginEnd="@dimen/dim_4dp"
        android:layout_marginBottom="@dimen/dim_4dp"
        android:gravity="center"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/articles_fragment_et" />

</android.support.constraint.ConstraintLayout>
