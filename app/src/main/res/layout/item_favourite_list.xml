<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_170dp"
    android:layout_margin="5dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/item_favourite_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1/7/2019" />

    <ImageView
        android:id="@+id/item_favourite_image_view"
        android:layout_width="@dimen/dim_40dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_favorite2"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/item_favourite_image_view_post"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_130dp"
        android:adjustViewBounds="true"
        android:minHeight="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_favourite_tv_title" />


</android.support.constraint.ConstraintLayout>