<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_70dp"
    android:layout_marginStart="@dimen/dim_16dp"
    android:layout_marginTop="@dimen/dim_16dp"
    android:layout_marginEnd="@dimen/dim_16dp"
    android:background="@drawable/rectangle2"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_30dp"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@id/item_notification_iv_note"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:id="@+id/item_notification_tv_title"
        android:layout_marginBottom="@dimen/dim_16dp"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/item_notification_tv_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_notification_tv_title"
        android:drawableStart="@drawable/ic_watch"
        android:paddingTop="@dimen/dim_4dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:layout_marginStart="@dimen/dim_32dp"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_notification_tv_title"
        android:src="@drawable/ic_notifications"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:layout_marginStart="@dimen/dim_32dp"
        android:id="@+id/item_notification_iv_note"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>