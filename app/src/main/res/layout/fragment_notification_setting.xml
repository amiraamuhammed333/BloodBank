<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textColor="@color/black"
        android:id="@+id/notification_setting_fragment_tv"
        android:textSize="@dimen/txt_15sp"
        android:background="@color/white"
        android:text="هذا النص هو مثال نص  يمكن ان يستبدل في نفس المساحة
,لقد تم توليد هذا النص من مولد النص العربي حيث يمكن ان يولد مثل هذا النص او العديد من النصوص الاخري           "
        android:gravity="center"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_200dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dim_16dp"
        android:id="@+id/notification_setting_fragment_constrain1"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@id/notification_setting_fragment_tv">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40dp"
            android:text="@string/blood_type"
            android:background="@drawable/rectangle3"
            android:textSize="@dimen/dim_20dp"
            android:paddingStart="@dimen/dim_8dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/notification_setting_fragment_constrain1"
            app:layout_constraintStart_toStartOf="@id/notification_setting_fragment_constrain1"
            app:layout_constraintEnd_toEndOf="@id/notification_setting_fragment_constrain1"
            android:id="@+id/notification_setting_fragment_blood_type"
            />

        <android.support.v7.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@id/notification_setting_fragment_blood_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_160dp"
            android:id="@+id/notification_setting_fragment_rV_bloodType"
            app:layout_constraintEnd_toEndOf="@id/notification_setting_fragment_constrain1"
            app:layout_constraintStart_toStartOf="@id/notification_setting_fragment_constrain1"
            />



    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_200dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dim_16dp"
        android:id="@+id/notification_setting_fragment_constrain2"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@id/notification_setting_fragment_constrain1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40dp"
            android:text="@string/government"
            android:background="@drawable/rectangle3"
            android:textSize="@dimen/dim_20dp"
            android:paddingStart="@dimen/dim_8dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/notification_setting_fragment_constrain2"
            app:layout_constraintStart_toStartOf="@id/notification_setting_fragment_constrain2"
            app:layout_constraintEnd_toEndOf="@id/notification_setting_fragment_constrain2"
            android:id="@+id/notification_setting_fragment_government"
            />

        <android.support.v7.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@id/notification_setting_fragment_government"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_160dp"
            android:id="@+id/notification_setting_fragment_rv_government"
            app:layout_constraintEnd_toEndOf="@id/notification_setting_fragment_constrain2"
            app:layout_constraintStart_toStartOf="@id/notification_setting_fragment_constrain2"
            />




    </android.support.constraint.ConstraintLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dim_16dp"
        android:background="@color/colorPrimary"
        android:id="@+id/notification_setting_fragment_btn_save"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/notification_setting_fragment_constrain2"
        android:text="@string/save"
        />




</android.support.constraint.ConstraintLayout>